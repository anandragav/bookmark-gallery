{
  "manifest_version": 3,
  "name": "Bookmark Gallery",
  "version": "1.0.0",
  "description": "A beautiful gallery view for your browser bookmarks",
  "permissions": ["bookmarks"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{bookmark-gallery@lovable.ai}",
      "strict_min_version": "109.0"
    }
  }
}