{
  "manifest_version": 3,
  "name": "Bookmark Gallery",
  "version": "1.0",
  "description": "A beautiful gallery view for your Chrome bookmarks",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}