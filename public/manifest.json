{
  "manifest_version": 3,
  "name": "Bookmark Gallery",
  "version": "1.0.0",
  "description": "A beautiful gallery view for your Chrome bookmarks",
  "permissions": [
    "bookmarks",
    "storage",
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; img-src 'self' https://* data:;"
  },
  "action": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{bookmark-gallery@lovable.ai}",
      "strict_min_version": "109.0"
    }
  },
  "web_accessible_resources": [{
    "resources": ["src/*", "assets/*"],
    "matches": ["<all_urls>"]
  }]
}