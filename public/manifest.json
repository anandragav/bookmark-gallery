{
  "manifest_version": 3,
  "name": "Bookmark Gallery",
  "description": "A beautiful gallery view for your Chrome bookmarks",
  "version": "1.0",
  "permissions": [
    "bookmarks"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' 'unsafe-inline'; object-src 'self'"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}